{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",               // ✅ Must match resolution style
    "moduleResolution": "NodeNext",    // ✅ Required for ESM in Node
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}